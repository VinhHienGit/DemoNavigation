    <NavigationPage Title="Page 1" Icon="Computer.png">
        <x:Arguments>
            <pageItem1:TabbedPageItem1/>
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Page 2" Icon="Computer.png">
        <x:Arguments>
            <pageItem1:TabbedPageItem2/>
